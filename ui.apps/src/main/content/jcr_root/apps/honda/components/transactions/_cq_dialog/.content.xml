<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Search Claims Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Unique ID for the search form component"
                                                fieldLabel="Form ID"
                                                name="./id"/>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="The title displayed for the search form"
                                                fieldLabel="Title"
                                                name="./title"/>
                                            <apiEndpoint
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Path to the API endpoint that handles search requests"
                                                fieldLabel="API Endpoint"
                                                name="./apiEndpoint"
                                                rootPath="/services"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                    <labels
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Field Labels"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <searchTypeLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Label for the search type dropdown"
                                                fieldLabel="Search Type Label"
                                                name="./searchTypeLabel"/>
                                            <searchValueLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Label for the search value input field"
                                                fieldLabel="Search Value Label"
                                                name="./searchValueLabel"/>
                                            <dateFromLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Label for the 'date from' field"
                                                fieldLabel="Date From Label"
                                                name="./dateFromLabel"/>
                                            <dateToLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Label for the 'date to' field"
                                                fieldLabel="Date To Label"
                                                name="./dateToLabel"/>
                                            <searchValuePlaceholder
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Default placeholder for the search value field"
                                                fieldLabel="Search Value Placeholder"
                                                name="./searchValuePlaceholder"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </labels>
                    <buttons
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Buttons"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <clearButtonText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Text for the clear button"
                                                fieldLabel="Clear Button Text"
                                                name="./clearButtonText"/>
                                            <clearButtonType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Visual style for the clear button"
                                                fieldLabel="Clear Button Style"
                                                name="./clearButtonType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <outline
                                                        jcr:primaryType="nt:unstructured"
                                                        selected="{Boolean}true"
                                                        text="Outline"
                                                        value="outline"/>
                                                    <primary
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Primary"
                                                        value="primary"/>
                                                    <secondary
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Secondary"
                                                        value="secondary"/>
                                                </items>
                                            </clearButtonType>
                                            <searchButtonText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Text for the search button"
                                                fieldLabel="Search Button Text"
                                                name="./searchButtonText"/>
                                            <searchButtonType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Visual style for the search button"
                                                fieldLabel="Search Button Style"
                                                name="./searchButtonType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <primary
                                                        jcr:primaryType="nt:unstructured"
                                                        selected="{Boolean}true"
                                                        text="Primary"
                                                        value="primary"/>
                                                    <outline
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Outline"
                                                        value="outline"/>
                                                    <secondary
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Secondary"
                                                        value="secondary"/>
                                                </items>
                                            </searchButtonType>
                                            <showSpinner
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}true"
                                                fieldDescription="Show loading spinner when search is in progress"
                                                name="./showSpinner"
                                                text="Show Loading Spinner"
                                                value="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </buttons>
                    <searchOptions
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Search Options"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <options
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldLabel="Search Options">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./searchOptions">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <value
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Value"
                                                            name="value"/>
                                                        <text
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Display Text"
                                                            name="text"/>
                                                        <default
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            name="default"
                                                            text="Default Selection"
                                                            value="{Boolean}true"/>
                                                    </items>
                                                </field>
                                            </options>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </searchOptions>
                    <messages
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Messages"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <successMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Message shown when search is successful"
                                                fieldLabel="Success Message"
                                                name="./successMessage"/>
                                            <errorMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Message shown when search fails"
                                                fieldLabel="Error Message"
                                                name="./errorMessage"/>
                                            <noResultsMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Message shown when no results are found"
                                                fieldLabel="No Results Message"
                                                name="./noResultsMessage"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </messages>
                    <advanced
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Advanced"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <apiMethod
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="HTTP method to use for API requests"
                                                fieldLabel="API Method"
                                                name="./apiMethod">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <post
                                                        jcr:primaryType="nt:unstructured"
                                                        selected="{Boolean}true"
                                                        text="POST"
                                                        value="POST"/>
                                                    <get
                                                        jcr:primaryType="nt:unstructured"
                                                        text="GET"
                                                        value="GET"/>
                                                </items>
                                            </apiMethod>
                                            <apiTimeout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                fieldDescription="Timeout for API requests in milliseconds"
                                                fieldLabel="Request Timeout (ms)"
                                                min="{Long}1000"
                                                name="./apiTimeout"
                                                step="{Long}1000"
                                                value="{Long}30000"/>
                                            <showDebugConsole
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Show debug console (author environment only)"
                                                name="./showDebugConsole"
                                                text="Show Debug Console"
                                                value="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </advanced>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
